@model MvcForms.Models.FormViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="Greeting" asp-controller="Home">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" placeholder="Enter first name" />
    <label asp-for="LastName"></label>
    <input asp-for="LastName" placeholder="Enter last name" />
    <input type="submit" />
</form>
<br />
<form asp-controller="Home" asp-action="ProcessFavorites">
    <label asp-for="Animal"></label>
    <input asp-for="Animal" />
    <input type="submit" />
</form>

<div class="border border-danger">
    <br />
    <form asp-controller="Home" asp-action="Process">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" /><br />
        <input type="submit" name="submit" value="Greet" />
        <input type="submit" name="submit" value="Reverse" />
        <input type="submit" name="submit" value="NoVowels" />
        <input type="submit" name="submit" value="OnlyVowels" />
    </form>
</div>